<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalimuCareApp.Views.HospitalVisitPage"
             Title="Hospital Visits" >            
    <ContentPage.Content>
        <StackLayout   Padding="5">
            <ListView x:Name="myListView"
                      HasUnevenRows="True">               
                    
                <ListView.ItemTemplate >

                    <DataTemplate >
                        <ViewCell>
                            <Frame
                    Margin="5"
                    Padding="0"
                    CornerRadius="1"
                    HasShadow="True">
                                <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                                    <BoxView BackgroundColor="{x:StaticResource PrimaryLight1}" WidthRequest="4" />

                                    <Grid
                            Padding="10"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />


                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.4*" />
                                            <ColumnDefinition Width="0.5*" />
                                            <ColumnDefinition Width="0.1*" />
                                        </Grid.ColumnDefinitions>


                                        <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Patient Name"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding name}"
                                TextColor="{x:StaticResource Secondary}" />

                                        <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Hospital Name"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding hospitalName}"
                                TextColor="{x:StaticResource Secondary}" />


                                        <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Visit Date"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding mvcDate , StringFormat='{0:MMM dd, yyyy}'}"
                                TextColor="{x:StaticResource Secondary}" />


                                        <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Department"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding department}"
                                TextColor="{x:StaticResource Secondary}" />

                                        <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="MVC Number"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding mvcNumber}"
                                TextColor="{x:StaticResource Secondary}" />

                                        <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Request Amt"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding totalRequestAmount, StringFormat='{0:#,0.#0}'}"                                            
                                TextColor="{x:StaticResource Secondary}" />

                                        <Label
                                Grid.Row="6"
                                Grid.Column="0"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="Status"
                                TextColor="{x:StaticResource Primary}" />
                                        <Label
                                Grid.Row="6"
                                Grid.Column="1"
                                FontSize="17"
                                Style="{x:StaticResource MedBookLabelNormal}"
                                Text="{Binding StatusDescription}"
                                TextColor="{x:StaticResource Secondary}" />

                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>