             >  
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="theRealTemplate">
                <Grid RowDefinitions="0.65*,0.35*">
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Aspect="AspectFill"
                        Source="{Binding ImageUrl}" />
                    
                    <StackLayout
                        Grid.Row="1"
                        Padding="20"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <!--  BackgroundColor="{Binding BackgroundColor}"  -->
                        <StackLayout
                            Padding="20"
                            BackgroundColor="{Binding BackgroundColor}"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Label
                                FontSize="23"
                                Style="{StaticResource MedBookLabelMedium}"
                                Text="{Binding Title}"
                                TextColor="White"
                                VerticalOptions="Start" />

                            <Label
                                FontSize="15"
                                Style="{StaticResource MedBookLabelNormal}"
                                Text="{Binding SubTitle}"
                                TextColor="White"
                                VerticalOptions="Start" />

                            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">

                                <Button
                                    x:Name="lblSkip"
                                    Padding="0"
                                    Command="{Binding lblPreviousCommand}"
                                    CommandParameter="{Binding PreviousPosition}"
                                    HeightRequest="30"
                                    HorizontalOptions="StartAndExpand"
                                    Style="{StaticResource ButtonOutlinePrimary}"
                                    Text="{Binding PreviousBtnText}" />

                                <Button
                                    x:Name="lblNext"
                                    Command="{Binding lblNextCommand}"
                                    CommandParameter="{Binding NextPosition}"
                                    FontSize="15"
                                    HeightRequest="30"
                                    HorizontalOptions="EndAndExpand"
                                    Style="{x:StaticResource ButtonOutlinePrimary}"
                                    Text="{Binding NextBtnText}" />

                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Grid>


